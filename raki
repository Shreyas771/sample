BLINK EXTERNAL--
int ledPin = 16; 
void setup() {
  pinMode(ledPin, OUTPUT);
}

void loop() {
  digitalWrite(ledPin, HIGH); 
  delay(1000); 
  digitalWrite(ledPin, LOW); 
  delay(1000); 
}
---------------------------------------------------------------------------------
FADE--
int ledPin = 16; 
int brightness = 0; 
int fadeAmount = 5; 

void setup() {
  pinMode(ledPin, OUTPUT); 
}

void loop() {
  analogWrite(ledPin, brightness); 
  brightness = brightness + fadeAmount; 

  if (brightness == 0 || brightness == 255) { 
    fadeAmount = -fadeAmount;
  }

  delay(30); 
}
