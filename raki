---STEPPER---
#include <Stepper.h>
#define stepsPerRevolution 200
Stepper myStepper(stepsPerRevolution, 16,5, 4, 14);

void setup() {
  
  myStepper.setSpeed(60);
}

void loop() {
 
  myStepper.step(stepsPerRevolution);
  delay(1000);

 
  myStepper.step(-stepsPerRevolution);
  delay(1000);
}
